server.port=8000

spring.datasource.url=jdbc:sqlserver://{ip};databaseName={db-name};trustServerCertificate=true
spring.datasource.username=
spring.datasource.password=

#validate élesben | create-drop | create
spring.jpa.hibernate.ddl-auto = create-drop
spring.jpa.properties.hibernate.show_sql=true
# nem szükséges spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.SQLServerDialect
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.use_sql_comments=true